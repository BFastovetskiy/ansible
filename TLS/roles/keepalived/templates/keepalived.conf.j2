global_defs {
    router_id u{{ state }}
}

vrrp_instance u{{ state }} {
    interface {{ interface }}
    state {{ state }}
    virtual_router_id {{ router_id }}
    priority {{ priority }}
    advert_int 1
    nopreempt
    authentication {
        auth_type PASS
        auth_pass {{ pass }}
    }
    virtual_ipaddress {
        {{ ip_address }}/{{ ip_length }} broadcast {{ broadcast }} dev {{ interface }} label {{ interface }}:1
    }
}

